# SevenTech Environment Configuration

# ===========================================
# LLM API Keys (Required for Mapper only)
# ===========================================

# Google Gemini (recommended - has free tier)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI GPT models (alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (alternative)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq (alternative - fast inference)
# GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# Application Configuration
# ===========================================

# Storage directory for plans and results
SEVENTECH_STORAGE_DIR=seventech/plans

# API server configuration
SEVENTECH_API_HOST=0.0.0.0
SEVENTECH_API_PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Mapper Configuration
# ===========================================

# Show browser during mapping (true/false)
MAPPER_HEADLESS=false

# Maximum steps for agent during mapping
MAPPER_MAX_STEPS=100

# Timeout for mapping in seconds
MAPPER_TIMEOUT=300

# ===========================================
# Executor Configuration
# ===========================================

# Run browser in headless mode during execution (true/false)
EXECUTOR_HEADLESS=true

# Execution timeout in seconds
EXECUTOR_TIMEOUT=60

# Retry failed steps (true/false)
EXECUTOR_RETRY_ON_ERROR=true

# Save screenshots during execution (true/false)
EXECUTOR_SAVE_SCREENSHOTS=false

# Take screenshot on error (true/false)
EXECUTOR_SCREENSHOT_ON_ERROR=true

# ===========================================
# Browser Configuration
# ===========================================

# Browser user agent (optional)
# USER_AGENT=Mozilla/5.0 ...

# Proxy settings (optional)
# PROXY_SERVER=http://proxy.example.com:8080
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass

# ===========================================
# browser-use Configuration
# ===========================================

# Disable telemetry
ANONYMIZED_TELEMETRY=false

# Skip LLM API key verification for testing
# SKIP_LLM_API_KEY_VERIFICATION=false
